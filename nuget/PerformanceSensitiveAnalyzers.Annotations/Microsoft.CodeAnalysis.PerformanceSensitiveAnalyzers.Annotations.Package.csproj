<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard1.3</TargetFramework>
    <IsPackable>true</IsPackable>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <NuspecPackageId>Microsoft.CodeAnalysis.PerformanceSensitiveAnalyzers.Annotations</NuspecPackageId>
    <Description>Annotation attributes used for Microsoft.CodeAnalysis.PerformanceSensitiveAnalyzers.</Description>
    <Summary>Annotation attributes used for Microsoft.CodeAnalysis.PerformanceSensitiveAnalyzers</Summary>
    <ReleaseNotes>Annotation attributes used for Microsoft.CodeAnalysis.PerformanceSensitiveAnalyzers.</ReleaseNotes>
    <PackageTags>Roslyn Analyzer CodeAnalysis PerformanceSensitive Compiler CSharp VB VisualBasic Diagnostic</PackageTags>
    <DevelopmentDependency>false</DevelopmentDependency>
  </PropertyGroup>
  
  <ItemGroup>
    <AnalyzerNupkgLibrary Include="Microsoft.CodeAnalysis.PerformanceSensitiveAnalyzers.Annotations.dll" />
    <AnalyzerNupkgLibrary Include="Microsoft.CodeAnalysis.PerformanceSensitiveAnalyzers.Annotations.xml" />
  </ItemGroup>

  <ItemGroup>
    <!--
      Analyzers that will be used to analyze projects that references 
       Microsoft.CodeAnalysis.PerformanceSensitiveAnalyzers.Annotations package.
      
      Note: PrivateAssets="ContentFiles" ensures that projects referencing Microsoft.CodeAnalysis.PerformanceSensitiveAnalyzers.Annotations package 
      will import everything but content files from Microsoft.CodeAnalysis.PerformanceSensitiveAnalyzers, specifically, analyzers.
    -->
    <PackageReference Include="Microsoft.CodeAnalysis.PerformanceSensitiveAnalyzers" Version="$(VersionPrefix)" Condition="'$(DotNetBuildFromSource)' != 'true'" PrivateAssets="ContentFiles" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\..\src\PerformanceSensitiveAnalyzers\Annotations\Microsoft.CodeAnalysis.PerformanceSensitiveAnalyzers.Annotations.csproj" />
  </ItemGroup>
</Project>
<Project>
  <ImportGroup Label="Settings">
    <Import Project="..\..\..\build\Targets\Analyzers.Settings.targets" />
  </ImportGroup>
  <PropertyGroup>
    <TargetFramework>net46</TargetFramework>
    <SetupProject>true</SetupProject>
    <AssemblyName>MetaCompilation.Analyzers.Setup</AssemblyName>
    <GeneratePkgDefFile>false</GeneratePkgDefFile>
    <IncludeAssemblyInVSIXContainer>false</IncludeAssemblyInVSIXContainer>
    <IncludeDebugSymbolsInVSIXContainer>false</IncludeDebugSymbolsInVSIXContainer>
    <IncludeDebugSymbolsInLocalVSIXDeployment>false</IncludeDebugSymbolsInLocalVSIXDeployment>
    <VSSDKTargetPlatformRegRootSuffix>Roslyn</VSSDKTargetPlatformRegRootSuffix>
    <ImportVSSDKTargets>true</ImportVSSDKTargets>
    <SemanticVersion>$(MetaCompilationAnalyzersSemanticVersion)</SemanticVersion>
    <PreReleaseVersion>$(MetaCompilationAnalyzersPreReleaseVersion)</PreReleaseVersion>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="ProjectTemplates\AnalyzerTutorialTemplate.zip">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <IncludeInVSIX>true</IncludeInVSIX>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Core\MetaCompilation.Analyzers.Core.csproj">
      <Name>MetaCompilation.Analyzers.Core</Name>
      <IncludeOutputGroupsInVSIX>BuiltProjectOutputGroup</IncludeOutputGroupsInVSIX>
      <IncludeOutputGroupsInVSIXLocalOnly>DebugSymbolsProjectOutputGroup</IncludeOutputGroupsInVSIXLocalOnly>
      <ForceIncludeInVSIX>true</ForceIncludeInVSIX>
    </ProjectReference>
  </ItemGroup>
  <ImportGroup Label="Targets">
    <Import Project="..\..\..\build\Targets\Analyzers.Imports.targets" />
  </ImportGroup>
</Project>